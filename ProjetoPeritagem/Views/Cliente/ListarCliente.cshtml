@model ProjetoPeritagem.ViewHelper.ViewHelperPeritagem
@{
    ViewData["Title"] = "ListarPeritagem";
}


<h2 id="titulo-form">Lista de Clientes</h2>
<div id="main">
    <div id="tabela-cliente">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Logo</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var it in Model.listCliente)
                    {
                        <tr>
                            <th scope="row">@it.Id</th>
                            <td>@it.Nome</td>
                            <td><img src="../@it.Icone" alt="logo" style="width:50px; height:50px"/></td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>